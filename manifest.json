{
  "manifest_version": 3,
  "name": "GitHub SSO Auto-Continue",
  "version": "1.0",
  "description": "Automatically clicks the Continue button on GitHub Single Sign-On pages",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["*://github.com/*", "*://accounts.google.com/*"],
  "content_scripts": [
    {
      "matches": ["*://github.com/*", "*://accounts.google.com/v3/signin/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
